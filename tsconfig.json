{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "types": ["@astrojs/image/client", "@modyfi/vite-plugin-yaml/modules"],

    "exactOptionalPropertyTypes": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~/layouts/*": ["./src/components/layouts/*"],
      "~/*": ["./src/*"]
    }
  }
}
