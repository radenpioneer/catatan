---
layout: layout/layout
pagination:
    data: collections.post
    size: 9
    reverse: true
    alias: posts
permalink: "{% if pagination.pageNumber > 0 %}/page/{{ pagination.pageNumber | plus: 1 }}.html{% else %}index.html{% endif %}"
---
<div id="postindex">
    {% for post in posts %}
    <article class="postindex-item">
        {% if post.data.image %}
        <a href="{{ post.url }}">
            <amp-img src="{{ post.data.image }}" width="480" height="300" layout="responsive"></amp-img></a>
        {% endif %}
        <h1 {% unless post.data.image %}class="noimage"{% endunless %}>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h1>
        <main class="postindex-excerpt">
            {% if post.data.image %}
            {{ post.templateContent | strip_html | truncatewords: 15 }}
            {% else %}
            {{ post.templateContent | strip_html | truncatewords: 25 }}
            {% endif %}
        </main>
        <aside class="postindex-meta">
            <p><a href="{{ post.url }}"><time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable | upcase }}</time></a></p>
            {% for item in post.data.category %}
            <p>{{ item | upcase }}</p>
            {% endfor %}
        </aside>
    </article>
    {% endfor %}
</div>
{% if pagination.href.previous or pagination.href.next %}
<div id="homeNav">
    {% if pagination.href.next %}
    <a id="homeNavNext" href="{{ pagination.href.next }}">
        <span class="mr-2">{{ "Tulisan Sebelumnya" | upcase }}</span>
        <span class="text-4xl">&#x2771;</span>
    </a>
    {% endif %}
    {% if pagination.href.previous %}
    <a id="homeNavPrev" href="{{ pagination.href.previous }}">
        <span class="text-4xl">&#x2770;</span>
        <span class="ml-2">{{ "Tulisan Terbaru" | upcase }}</span>
    </a>
    {% endif %}
</div>
{% endif %}
