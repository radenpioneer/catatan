---
layout: false
permalink: manifest.json
norobots: true
---

{
    "name": "{{ env.site.title | append: ": " | append: env.site.description }}",
    "short_name": "{{ env.site.title }}",
    "start_url": "/",
    "icons": [
        {
            "src": "{{ env.site.favicons }}favicon-192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "{{ env.site.favicons }}favicon-512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "theme_color": "{{ env.site.themeColor }}",
    "background_color": "#ffffff",
    "display": "standalone"
}
