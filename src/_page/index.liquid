---
layout: layout/layout
permalink: "index.html"
---
<div id="homePage">
    <div id="featuredPosts">
        <h1>{{ "Pos Terbaru" }}</h1>
        {% assign posts = collections.post | sort: 'date' | reverse %}
        {% for post in posts limit: 4 %}
        <a href="{{ post.url }}">
            {% if post.data.image %}
            <amp-img src="{{ post.data.image }}" height="1" width="1" layout="responsive"></amp-img>
            {% endif %}
            <div>
                <h2 class="{% unless post.data.image %}noimage{% endunless %}">{{ post.data.title }}</h2>
                <p><time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time></p>
            </div>
        </a>
        {% endfor %}
        <p><a href="/post">Tulisan Lainnya</a></p>
    </div>
</div>

