---
import Layout from '~/layouts/layout.astro'
import { SEO } from 'astro-seo'
import { Picture } from '@astrojs/image/components'
import site from '~/site.yml'

const posts = await Astro.glob('./posts/*.mdx')
---

<Layout>
  <SEO title={site.title} description={site.description} slot="head" />
  <section>
    {
      posts
        .sort(
          (a, b) =>
            new Date(b.frontmatter.date).getTime() -
            new Date(a.frontmatter.date).getTime()
        )
        .map((post, i) => (
          <article class={!post.frontmatter.image ? 'a-no-image' : ''}>
            {post.frontmatter.image && (
              <a href={post.url}>
                <Picture
                  src={post.frontmatter.image}
                  alt={post.frontmatter.title}
                  width={540}
                  height={304}
                  widths={[540, 360]}
                  aspectRatio={16 / 9}
                  sizes="(min-width: 576px) 540px, 100vw"
                  formats={['avif', 'webp', 'jpeg']}
                  loading={i < 3 ? 'eager' : 'lazy'}
                />
              </a>
            )}
            <p class="date">
              <time datetime={post.frontmatter.date}>
                {new Date(post.frontmatter.date).toLocaleDateString('id-ID', {
                  weekday: 'long',
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            </p>
            <h3 class={!post.frontmatter.image ? 't-no-image' : ''}>
              <a href={post.url}>{post.frontmatter.title}</a>
            </h3>
          </article>
        ))
    }
  </section>
</Layout>

<style lang="scss">
  section {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 1rem;
  }

  article {
    min-height: 180px;
  }

  .a-no-image {
    border-width: 1px;
    border-color: var(--primary);
    border-style: solid;
    border-radius: 0.5rem;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    padding-top: 1rem;
    padding-bottom: 1.5rem;

    .date {
      margin-top: -1.25rem;
      time {
        background-color: var(--background-color);
        padding-left: 5px;
        padding-right: 5px;
      }
    }
  }

  h3 {
    --typography-spacing-vertical: 0;
    margin-top: 0.5rem;

    a {
      color: inherit;

      &:hover {
        color: var(--primary);
      }
    }
  }

  .date {
    margin-top: 0.75rem;
    margin-bottom: 0;
    color: var(--primary);
  }

  .t-no-image {
    --font-size: 2.25rem;
    line-height: 2.5rem;
  }

  @media (min-width: 576px) {
    section {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    h3 {
      --font-size: 1.25rem;
      line-height: 1.75rem;
    }

    .date {
      font-size: 0.875rem;
    }
  }

  @media (min-width: 768px) {
    section {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
</style>
