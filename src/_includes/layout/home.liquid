---
layout: layout/layout
---
<div id="homePage">
    <div id="hello">
        <p><span>{{ subtitle | upcase }}</span></p>
        <h1><span>{{ title }}</span></h1>
        <div id="description">
            {{ content }}
        </div>
    </div>
    <div id="featuredPosts">
        <h1><span>{{ "Pos Terbaru" }}</span></h1>
        {% assign posts = collections.post | sort: 'date' | reverse %}
        {% for post in posts limit: 4 %}
        <a href="{{ post.url }}">
            {% if post.data.image %}
            <amp-img src="{{ post.data.image }}" height="1" width="1" layout="responsive" alt="{{ post.data.title }}" title="{{ post.data.title }}"></amp-img>
            {% endif %}
            <h2 class="{% unless post.data.image %}noimage{% endunless %}">{{ post.data.title }}</h2>
            <p><time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable | upcase }}</time></p>
        </a>
        {% endfor %}
        <p><a href="/post">{{ "Tulisan Lainnya" | upcase }} <span>&rarr;</span></a></p>
    </div>
</div>