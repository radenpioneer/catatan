---
import Layout from './layout.astro'

const { title } = Astro.props as { title: string }
---

<Layout>
  <Fragment slot="head">
    <slot name="head" />
  </Fragment>
  <section>
    <article>
      <h1>{title}</h1>
      <slot />
    </article>
  </section>
</Layout>

<style lang="scss">
  article {
    max-width: 768px;
    margin-left: auto;
    margin-right: auto;
  }

  h1 {
    text-align: center;
  }
</style>
